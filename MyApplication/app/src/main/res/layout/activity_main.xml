<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aluno.myapplication.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="328dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acelerometro"
            android:id="@+id/Acelerometro"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:onClick="Acelerometro"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Girometro"
            android:id="@+id/Girometro"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:onClick="Girometro"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sair"
            android:id="@+id/Sair"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:onClick="Sair"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</ScrollView>
